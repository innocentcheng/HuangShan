<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_l4_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.along.zhuanhang.ui.l4_text">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="数字"
        android:id="@+id/l4text_et"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30sp" />

    <TextView
        android:text="随机数"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l4text_et"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:id="@+id/l4text_tv"
        android:textSize="36sp" />

    <Button
        android:text="random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l4text_tv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="88dp"
        android:onClick="rdnum"
        android:id="@+id/random_btn"
        android:textSize="14sp" />
</RelativeLayout>
