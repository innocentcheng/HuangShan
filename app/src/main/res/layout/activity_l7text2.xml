<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_l7text2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.along.zhuanhang.ui.l8">

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:id="@+id/l8_tv_money"
        android:textSize="18sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_below="@+id/l8_tv_money"
        android:layout_toLeftOf="@+id/l8_tv_money"
        android:layout_toStartOf="@+id/l8_tv_money"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="116dp"
        android:id="@+id/l8_iv1" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignBottom="@+id/l8_iv1"
        android:layout_toRightOf="@+id/l8_tv_money"
        android:layout_toEndOf="@+id/l8_tv_money"
        android:layout_marginLeft="46dp"
        android:layout_marginStart="46dp"
        android:id="@+id/l8_iv2" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l8_iv1"
        android:layout_toLeftOf="@+id/l8_tv_money"
        android:layout_toStartOf="@+id/l8_tv_money"
        android:layout_marginRight="21dp"
        android:layout_marginEnd="21dp"
        android:onClick="buy1"
        android:layout_marginTop="35dp"
        android:id="@+id/l8_btn1" />

    <Button
        android:text="Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/l8_btn1"
        android:layout_toRightOf="@+id/l8_tv_money"
        android:layout_toEndOf="@+id/l8_tv_money"
        android:layout_marginLeft="27dp"
        android:onClick="buy2"
        android:layout_marginStart="27dp"
        android:id="@+id/l8_btn2" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/l8_tv_info"
        android:textSize="18sp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/l8_btn2"
        android:layout_toStartOf="@+id/l8_btn2"
        android:layout_marginRight="45dp"
        android:layout_marginEnd="45dp"
        android:layout_marginBottom="65dp" />

</RelativeLayout>
